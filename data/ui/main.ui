<interface>
    <object class="GtkSizeGroup">
        <property name="mode">GTK_SIZE_GROUP_HORIZONTAL</property>
        <widgets>
            <widget name="cancel_button"/>
            <widget name="continue_button"/>
        </widgets>
    </object>

    <template class="MainWindow" parent="GtkApplicationWindow">
        <property name="gravity">GDK_GRAVITY_CENTER</property>
        <property name="width_request">400</property>
        <property name="height_request">400</property>
        <child type="titlebar">
            <object class="GtkHeaderBar" id="headerbar">
                <property name="visible">True</property>
                <property name="title">Upload Screenshot</property>
                <property name="subtitle">Screenshot Preview</property>
                <child>
                    <object class="GtkRevealer" id="cancel_reveal">
                        <property name="visible">True</property>
                        <property name="transition_type">crossfade</property>
                        <property name="reveal_child">True</property>
                        <child>
                            <object class="GtkButton" id="cancel_button">
                                <property name="visible">True</property>
                                <property name="label">Cancel</property>
                                <signal name="clicked" handler="cancel"/>
                                <style>
                                    <class name="destructive-action"/>
                                </style>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="continue_button">
                        <property name="visible">True</property>
                        <property name="label">Continue</property>
                        <signal name="clicked" handler="continue"/>
                        <style>
                            <class name="suggested-action"/>
                        </style>
                    </object>
                    <packing>
                        <property name="pack_type">end</property>
                    </packing>
                </child>
                <child>
                    <object class="GtkRevealer" id="save_reveal">
                        <property name="visible">True</property>
                        <property name="transition_type">slide-left</property>
                        <property name="reveal_child">True</property>
                        <child>
                            <object class="GtkBox">
                                <property name="visible">True</property>
                                <property name="orientation">horizontal</property>
                                <property name="spacing">6</property>
                                <child>
                                    <object class="GtkButton">
                                        <property name="visible">True</property>
                                        <signal name="clicked" handler="save_and_quit"/>
                                        <style>
                                            <class name="image-button"/>
                                        </style>
                                        <child>
                                            <object class="GtkImage">
                                                <property name="visible">True</property>
                                                <property name="icon-name">document-save-as-symbolic</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkSeparator">
                                        <property name="visible">True</property>
                                        <property name="orientation">vertical</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                    <packing>
                        <property name="pack_type">end</property>
                    </packing>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkNotebook" id="notebook">
                <property name="visible">True</property>
                <property name="show_tabs">False</property>
                <property name="show_border">False</property>
                <child>
                    <object class="GtkBox">
                        <property name="visible">True</property>
                        <property name="homogeneous">True</property>
                        <child>
                            <object class="GtkImage" id="preview"></object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkBox" id="transfer">
                        <property name="visible">True</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">6</property>
                        <property name="valign">center</property>
                        <property name="border_width">18</property>
                        <child>
                            <object class="GtkProgressBar" id="progress">
                                <property name="visible">True</property>
                                <property name="show_text">True</property>
                                <property name="text"></property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkLinkButton" id="link">
                        <property name="visible">True</property>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>
